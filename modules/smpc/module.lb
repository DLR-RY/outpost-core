def init(module):
    module.name = "smpc"
    module.description = "Simple message passing channel"


def prepare(module, options):
    module.depends(":rtos", ":utils")
    return True


def build(env):
    env.copy('src', 'src')

    if env[':test']:
        env.copy('test', 'test', ignore=env.ignore_files('main.cpp'))

